{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "noImplicitAny": false,
    "lib": ["es2017"],
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["./@types/*", "../../types/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [ "**/__tests__/*", "**/__mocks__/*" ]
}
