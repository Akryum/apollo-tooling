{
  "name": "apollo-codegen-core",
  "description": "Core generator APIs for Apollo Codegen",
  "version": "0.29.0-register.0",
  "author": "Apollo GraphQL <opensource@apollographql.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollographql/apollo-tooling.git"
  },
  "homepage": "https://github.com/apollographql/apollo-tooling",
  "bugs": "https://github.com/apollographql/apollo-tooling/issues",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf lib",
    "prebuild": "npm run clean",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "dependencies": {
    "@babel/generator": "7.1.3",
    "@babel/parser": "^7.1.3",
    "@babel/types": "7.1.3",
    "apollo-env": "file:../apollo-env",
    "ast-types": "^0.11.6",
    "common-tags": "^1.5.1",
    "core-js": "^2.5.3",
    "recast": "^0.15.3"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/src/polyfills.ts"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test-utils/matchers.ts",
    "testMatch": [
      "**/__tests__/*.(js|ts)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/",
      "<rootDir>/test/fixtures/",
      "<rootDir>/test/test-utils"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.test.json",
        "diagnostics": false
      }
    }
  }
}
